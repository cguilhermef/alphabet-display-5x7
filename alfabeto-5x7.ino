void renderLetter(int letter) {
  uint8_t r = 1;
  uint8_t row[2];
  for (int count = 0; count < 7; count++) {
    row[0] = alphabet[letter][count];
    row[1] = r;
    sr.setAll(row);
    delay(1);
    r = r << 1;
  }
}
